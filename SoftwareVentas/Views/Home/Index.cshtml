@{
    ViewData["Title"] = "Menú de Secciones";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<div id="content">

    <!-- Begin Page Content -->
    <div class="container-fluid">

        <!-- Page Heading -->
        <div class="d-flex justify-content-center mb-4">
            <h1 class="h3 mb-0 text-gray-800">Menú de Secciones</h1>
        </div>

        <!-- Content Row for Sections (Products, Users, etc.) -->
        <div class="row justify-content-center">

            <!-- Products Card -->
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-primary shadow h-100 py-2">
                    <div class="card-body text-center">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Products
                        </div>
                        <a class="nav-link" asp-controller="Products" asp-action="Index">
                            <i class="fas fa-fw fa-tshirt"></i>
                            <span>Products</span>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Users Card -->
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-success shadow h-100 py-2">
                    <div class="card-body text-center">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Customers
                        </div>
                        <a class="nav-link" asp-controller="Customers" asp-action="Index">
                            <i class="fas fa-fw fa-users"></i>
                            <span>Customers</span>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Orders Card -->
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-info shadow h-100 py-2">
                    <div class="card-body text-center">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            Users
                        </div>
                        <a class="nav-link" asp-controller="User" asp-action="Index">
                            <i class="fas fa-fw fa-user"></i>
                            <span>Users</span>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Orders Card -->
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-info shadow h-100 py-2">
                    <div class="card-body text-center">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            Employees
                        </div>
                        <a class="nav-link" asp-controller="Employees" asp-action="Index">
                            <i class="fas fa-fw fa-user"></i>
                            <span>Employees</span>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Reports Card -->
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-warning shadow h-100 py-2">
                    <div class="card-body text-center">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                            Roles
                        </div>
                        <a class="nav-link" asp-controller="Roles" asp-action="Index">
                            <i class="fas fa-fw fa-user"></i>
                            <span>Roles</span>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Reports Card -->
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-warning shadow h-100 py-2">
                    <div class="card-body text-center">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                            Sales
                        </div>
                        <a class="nav-link" asp-controller="Sales" asp-action="Index">
                            <i class="fas fa-fw fa-user"></i>
                            <span>Sales</span>
                        </a>
                    </div>
                </div>
            </div>

        </div>

    </div>
</div>